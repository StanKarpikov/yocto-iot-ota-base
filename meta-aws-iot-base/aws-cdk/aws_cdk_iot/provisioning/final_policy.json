{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "iot:Connect",
      "Resource": {
        "Fn::Join": [
          ":",
          [
              "arn","aws", "iot",
            {
              "Ref": "AWS::Region"
            },
            {
              "Ref": "AWS::AccountId"
            },
            "client/${iot:Connection.Thing.ThingName}"
          ]
        ]
      }
    },
    {
      "Effect": "Allow",
      "Action": "iot:Subscribe",
      "Resource": [
        {
          "Fn::Join": [
            ":",
            ["arn", "aws", "iot",
              {
                "Ref": "AWS::Region"
              },
              {
                "Ref": "AWS::AccountId"
              },
              "topicfilter/iot/${iot:Connection.Thing.ThingName}/*"
            ]
          ]
        }
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Receive",
      "Resource": [
        {
          "Fn::Join": [
            ":",
            ["arn", "aws", "iot",
              {
                "Ref": "AWS::Region"
              },
              {
                "Ref": "AWS::AccountId"
              },
              "topic/iot/${iot:Connection.Thing.ThingName}/*"
            ]
          ]
        }
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Publish",
      "Resource": [
        {
          "Fn::Join": [
            ":",
            ["arn","aws", "iot",
              {
                "Ref": "AWS::Region"
              },
              {
                "Ref": "AWS::AccountId"
              },
              "topic/iot/${iot:Connection.Thing.ThingName}/*"
            ]
          ]
        }
      ]
    }
  ]
}
